<Window x:Class="QuizApp.WPF.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp.WPF"
        xmlns:vm="clr-namespace:QuizApp.WPF.ViewModels.Admin"
        xmlns:views="clr-namespace:QuizApp.WPF.Views.Admin"
        mc:Ignorable="d"
        Title="QuizApp - Admin Dashboard"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="15,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E8"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataTemplates for main content -->
        <DataTemplate DataType="{x:Type vm:AdminDashboardViewModel}">
            <views:AdminDashboardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ManageQuizzesViewModel}">
            <views:ManageQuizzesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:QuizDetailsViewModel}">
            <views:QuizDetailsView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2C3E50" CornerRadius="0,0,0,12" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#1A2530" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🛠️ QuizApp"
                                   Foreground="White"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Admin Dashboard"
                                   Foreground="#BDC3C7"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <StackPanel Grid.Row="1" Margin="15,30,15,0">
                    <Button Content="🏠 Dashboard"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToDashboardCommand}"/>
                    <Button Content="🧑‍💼 Manage Users"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToUsersCommand}"
                            Margin="0,10,0,0"/>
                    <Button Content="🧩 Manage Quizzes"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToManageQuizzesCommand}"
                            Margin="0,10,0,0"/>
                    <Button Content="📝 View Quiz Questions"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToQuizDetailsCommand}"
                            Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Footer -->
                <Border Grid.Row="2" Background="#1A2530" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentUsername}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding UserRole}"
                                   Foreground="#BDC3C7"
                                   FontSize="11"
                                   Margin="0,2,0,10"/>
                        <Button Content="🚪 Logout"
                                Command="{Binding LogoutCommand}"
                                Style="{StaticResource NavButton}"
                                Background="#E74C3C"
                                Foreground="White"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="15" Margin="10" 
                Effect="{DynamicResource DropShadowEffect}">
            <ContentControl Content="{Binding CurrentView}" 
                            HorizontalAlignment="Stretch" 
                            VerticalAlignment="Stretch"/>
        </Border>
    </Grid>
</Window>
