<UserControl x:Class="QuizApp.WPF.Views.Admin.ManageUsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#0F172A">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="PrimaryColor">#6366F1</Color>
        <Color x:Key="DarkBackground">#0F172A</Color>
        <Color x:Key="CardBackground">#1E293B</Color>
        <Color x:Key="BorderColor">#334155</Color>
        <Color x:Key="HoverColor">#374151</Color>
        <Color x:Key="SelectedColor">#6366F1</Color>
        <Color x:Key="TextPrimary">#F1F5F9</Color>
        <Color x:Key="TextSecondary">#94A3B8</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

        <!-- Shadow effect -->
        <DropShadowEffect x:Key="CardShadow" Color="#000000" ShadowDepth="0" Opacity="0.3" BlurRadius="15"/>
        <DropShadowEffect x:Key="HeaderShadow" Color="#000000" ShadowDepth="0" Opacity="0.4" BlurRadius="20"/>

        <!-- ListBoxItem Style -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="1"
                                BorderBrush="{StaticResource BorderBrush}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox Style -->
        <Style TargetType="GroupBox">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="12" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <DockPanel>
                                    <!-- Header with accent line -->
                                    <Border DockPanel.Dock="Top" 
                                            Margin="0,0,0,15" 
                                            Background="Transparent">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Rectangle Width="4" 
                                                       Height="20" 
                                                       Fill="{StaticResource PrimaryBrush}" 
                                                       RadiusX="2" 
                                                       RadiusY="2" 
                                                       Margin="0,0,12,0"/>
                                            <TextBlock Text="{TemplateBinding Header}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="16" 
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </StackPanel>
                                    </Border>
                                    <ContentPresenter/>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Style -->
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Divider -->
        <Rectangle Grid.Column="1" 
                   Fill="{StaticResource BorderBrush}" 
                   Margin="10,0" 
                   HorizontalAlignment="Center" 
                   Width="1" 
                   Opacity="0.5"/>

        <!-- Users List -->
        <GroupBox Header="USERS" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- User Count -->
                <TextBlock Grid.Row="0"
                           Text="{Binding Users.Count, StringFormat='Total Users: {0}'}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Left"/>
                
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding Users}"
                         SelectedItem="{Binding SelectedUser}"
                         DisplayMemberPath="Username"/>
            </Grid>
        </GroupBox>

        <!-- Assigned Quizzes for Selected User -->
        <GroupBox Header="ASSIGNED QUIZZES" Grid.Column="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Quiz Count -->
                <TextBlock Grid.Row="0"
                           Text="{Binding AssignedQuizzes.Count, StringFormat='Assigned Quizzes: {0}'}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="12"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Left"/>
                
                <ListBox Grid.Row="1"
                         ItemsSource="{Binding AssignedQuizzes}"
                         DisplayMemberPath="Title"/>
                
                <!-- Selected User Info -->
                <Border Grid.Row="2"
                        Background="{StaticResource BorderBrush}"
                        CornerRadius="6"
                        Padding="10"
                        Margin="0,10,0,0"
                        Visibility="{Binding SelectedUser, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding SelectedUser.Username, StringFormat='Selected: {0}'}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               FontWeight="SemiBold"/>
                </Border>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>