<UserControl x:Class="QuizApp.WPF.Views.Admin.AssignQuizzesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:QuizApp.WPF.Behaviors"
             Background="#1E293B">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Users Section -->
            <Border Grid.Column="0" Background="#0F172A" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="👤 Users" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,15"/>
                    <ListBox ItemsSource="{Binding Users}" 
                             SelectedItem="{Binding SelectedUser}"
                             DisplayMemberPath="Username"
                             Background="#1E293B" 
                             Foreground="White"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </Border>

            <!-- Spacer -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Quizzes Section -->
            <Border Grid.Column="2" Background="#0F172A" CornerRadius="8" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="📝 Quizzes" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               Margin="0,0,0,15"/>

                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding Quizzes}" 
                             SelectionMode="Extended"
                             behaviors:ListBoxSelectedItemsBehavior.BindableSelectedItems="{Binding SelectedQuizzes}" 
                             DisplayMemberPath="Title"
                             Background="#1E293B" 
                             Foreground="White"
                             BorderThickness="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>

                    <Button Grid.Row="2"
                            Content="Assign Selected Quizzes" 
                            Command="{Binding AssignQuizzesCommand}" 
                            Width="200" 
                            Height="35"
                            HorizontalAlignment="Left"
                            Background="#4CAF50" 
                            Foreground="White"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Area (if needed later) -->
        <Border Grid.Row="1" Background="Transparent" Height="10"/>
    </Grid>
</UserControl>