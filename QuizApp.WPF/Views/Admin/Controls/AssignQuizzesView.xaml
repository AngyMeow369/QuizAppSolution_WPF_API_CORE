<UserControl x:Class="QuizApp.WPF.Views.Admin.AssignQuizzesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:QuizApp.WPF.Behaviors"
             Height="700" Width="900">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Users List -->
        <Border Grid.Column="0" Background="#1E293B" CornerRadius="6" Padding="16">
            <StackPanel>
                <TextBlock Text="👤 Users" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Users}" 
                         SelectedItem="{Binding SelectedUser}"
                         DisplayMemberPath="Username"
                         Background="#0F172A" 
                         Foreground="White"
                         BorderThickness="0"
                         Height="500"/>
            </StackPanel>
        </Border>

        <!-- Spacer -->
        <GridSplitter Grid.Column="1" Width="10" HorizontalAlignment="Center"/>

        <!-- Quizzes List -->
        <Border Grid.Column="2" Background="#1E293B" CornerRadius="6" Padding="16">
            <StackPanel>
                <TextBlock Text="📝 Quizzes" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Quizzes}" SelectionMode="Extended"
                         behaviors:ListBoxSelectedItemsBehavior.BindableSelectedItems="{Binding SelectedQuizzes}" 
                         DisplayMemberPath="Title"
                         Background="#0F172A" 
                         Foreground="White"
                         BorderThickness="0"
                         Height="450"/>

                <Button Content="Assign Selected Quizzes" 
                        Command="{Binding AssignQuizzesCommand}" 
                        Margin="0,10,0,0" Width="200" Height="35"
                        HorizontalAlignment="Left"
                        Background="#4CAF50" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
