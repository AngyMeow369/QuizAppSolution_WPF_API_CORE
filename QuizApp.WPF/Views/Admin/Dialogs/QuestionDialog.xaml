<Window x:Class="QuizApp.WPF.Views.Admin.QuestionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Question"
        Height="450"
        Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

      
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Question:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Question.Text, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="14" Padding="5"/>
        </StackPanel>

        
        <StackPanel Grid.Row="1">
            <TextBlock Text="Options:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ItemsControl ItemsSource="{Binding Question.Options}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <CheckBox IsChecked="{Binding IsCorrect, Mode=TwoWay}" VerticalAlignment="Center"/>
                            <TextBox Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Width="250" Margin="5,0,0,0"/>
                            <Button Content="🗑"
                                    Command="{Binding DataContext.DeleteOptionCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Margin="5,0,0,0" Width="25" Height="25"
                                    Background="#F8D7DA" BorderBrush="#F5C2C7"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Button Content="Add Option"
                    Command="{Binding AddOptionCommand}"
                    Margin="0,5,0,0"
                    Width="120"/>
        </StackPanel>

        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="90" Margin="0,0,10,0" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="90" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
