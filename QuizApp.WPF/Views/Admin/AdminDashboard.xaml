<Window x:Class="QuizApp.WPF.Views.Admin.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="450" Width="800">
    <Grid Margin="10">
        <TextBlock Text="Welcome, Admin!" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,20,0,0"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Button Content="Manage Categories" Height="40" Margin="0,10"/>
            <Button Content="Manage Questions" Height="40" Margin="0,10"/>
            <Button Content="Manage Quizzes" Height="40" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
