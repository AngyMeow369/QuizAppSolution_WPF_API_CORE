<Window x:Class="QuizApp.WPF.Views.Admin.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:QuizApp.WPF.ViewModels"
        Title="QuizApp - Admin Dashboard" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowState="Normal"
        ResizeMode="CanResize"
        Background="#F8FAFC"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Clean Color Palette -->
        <SolidColorBrush x:Key="PrimaryBrush">#2563EB</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryLightBrush">#DBEAFE</SolidColorBrush>
        <SolidColorBrush x:Key="SuccessBrush">#10B981</SolidColorBrush>
        <SolidColorBrush x:Key="DangerBrush">#EF4444</SolidColorBrush>
        <SolidColorBrush x:Key="CardBgBrush">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="TextPrimaryBrush">#1F2937</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondaryBrush">#6B7280</SolidColorBrush>
        <SolidColorBrush x:Key="BorderBrush">#E5E7EB</SolidColorBrush>
        <SolidColorBrush x:Key="HoverBrush">#F3F4F6</SolidColorBrush>

        <!-- Card Style -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBgBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" Opacity="0.1" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Feature Card Button Style -->
        <Style x:Key="FeatureCardButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="25"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>

        <!-- Loading Style -->
        <Style x:Key="LoadingText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#F8FAFC" Opacity="0.8" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🔄 Loading dashboard data..." Style="{StaticResource LoadingText}"/>
                <TextBlock Text="Please wait..." Style="{StaticResource LoadingText}" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Layout -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Style="{StaticResource ModernCard}"
                    Padding="25" 
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Welcome Section -->
                    <StackPanel>
                        <TextBlock Text="Admin Dashboard" 
                                   FontSize="26" 
                                   FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBlock Text="Welcome back, Administrator!" 
                                   FontSize="15" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   Margin="0,0,0,20"/>

                        <!-- Stats Cards - REAL DATA -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Border Background="{StaticResource PrimaryLightBrush}" 
                                    CornerRadius="8" 
                                    Padding="15,10"
                                    Margin="0,0,15,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="👥" FontSize="16" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Users.Count}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text="Total Users" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource PrimaryLightBrush}" 
                                    CornerRadius="8" 
                                    Padding="15,10"
                                    Margin="0,0,15,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="📚" FontSize="16" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Categories.Count}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text="Categories" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource PrimaryLightBrush}" 
                                    CornerRadius="8" 
                                    Padding="15,10"
                                    Margin="0,0,15,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="❓" FontSize="16" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Questions.Count}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text="Questions" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource PrimaryLightBrush}" 
                                    CornerRadius="8" 
                                    Padding="15,10">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="📝" FontSize="16" Margin="0,0,8,0"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Quizzes.Count}" 
                                                   FontSize="16" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="{StaticResource PrimaryBrush}"/>
                                        <TextBlock Text="Quizzes" 
                                                   FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- User Info -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="{StaticResource PrimaryBrush}" 
                                CornerRadius="10" 
                                Padding="12">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Width="36" Height="36" Background="White" CornerRadius="8">
                                    <TextBlock Text="👤" 
                                               FontSize="16" 
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Center"/>
                                </Border>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="{Binding Username}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold" 
                                               Foreground="White"/>
                                    <TextBlock Text="{Binding Role}" 
                                               FontSize="12" 
                                               Foreground="White"
                                               Opacity="0.9"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Feature Cards -->
            <ItemsControl Grid.Row="1" Margin="0,0,0,20" ItemsSource="{Binding FeatureCards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" Rows="2" Margin="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ModernCard}" 
                                Margin="10" 
                                Width="300" 
                                Height="160">
                            <Button Style="{StaticResource FeatureCardButton}" 
                                    Command="{Binding Command}">
                                <StackPanel HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Width="240">
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Center"
                                                Margin="0,0,0,12">
                                        <Border Width="48" 
                                                Height="48" 
                                                Background="{StaticResource PrimaryLightBrush}" 
                                                CornerRadius="10">
                                            <TextBlock Text="{Binding Icon}" 
                                                       FontSize="20" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimaryBrush}"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center"
                                               Margin="0,0,0,6"/>
                                    <TextBlock Text="{Binding Description}" 
                                               FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Footer Actions -->
            <Border Grid.Row="2" 
                    Style="{StaticResource ModernCard}"
                    Padding="20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="🔄 Refresh Data" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding LoadDataCommand}"/>
                    <Rectangle Width="1" Height="20" Fill="{StaticResource BorderBrush}" Margin="20,0"/>
                    <Button Content="📊 View Analytics" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding ViewAnalyticsCommand}"/>
                    <Rectangle Width="1" Height="20" Fill="{StaticResource BorderBrush}" Margin="20,0"/>
                    <Button Content="⚙️ Settings" 
                            Style="{StaticResource ActionButton}"
                            Command="{Binding SettingsCommand}"/>
                    <Rectangle Width="1" Height="20" Fill="{StaticResource BorderBrush}" Margin="20,0"/>
                    <Button Content="🚪 Logout" 
                            Style="{StaticResource ActionButton}"
                            Foreground="{StaticResource DangerBrush}"
                            Command="{Binding LogoutCommand}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>