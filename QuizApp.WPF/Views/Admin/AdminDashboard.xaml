<UserControl x:Class="QuizApp.WPF.Views.Admin.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8FAFC"
             FontFamily="Segoe UI">

    <!-- Resources must include all brushes, styles, and converters -->
    <UserControl.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Brushes -->
        <SolidColorBrush x:Key="PrimaryBrush">#2563EB</SolidColorBrush>
        <SolidColorBrush x:Key="PrimaryLightBrush">#DBEAFE</SolidColorBrush>
        <SolidColorBrush x:Key="SuccessBrush">#10B981</SolidColorBrush>
        <SolidColorBrush x:Key="DangerBrush">#EF4444</SolidColorBrush>
        <SolidColorBrush x:Key="CardBgBrush">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="TextPrimaryBrush">#1F2937</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondaryBrush">#6B7280</SolidColorBrush>
        <SolidColorBrush x:Key="BorderBrush">#E5E7EB</SolidColorBrush>
        <SolidColorBrush x:Key="HoverBrush">#F3F4F6</SolidColorBrush>

        <!-- Styles -->
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBgBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" Opacity="0.1" BlurRadius="15"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LoadingText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#F8FAFC" Opacity="0.8" 
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🔄 Loading dashboard data..." Style="{StaticResource LoadingText}"/>
                <TextBlock Text="Please wait..." Style="{StaticResource LoadingText}" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Layout -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Style="{StaticResource ModernCard}" Padding="25" Margin="0,0,0,20">
                <!-- Add header content here -->
            </Border>

            <!-- Feature Cards -->
            <ItemsControl Grid.Row="1" Margin="0,0,0,20" ItemsSource="{Binding FeatureCards}">
                <!-- Add ItemTemplate here -->
            </ItemsControl>

            <!-- Footer -->
            <Border Grid.Row="2" Style="{StaticResource ModernCard}" Padding="20">
                <!-- Add footer buttons here -->
            </Border>
        </Grid>
    </Grid>
</UserControl>
