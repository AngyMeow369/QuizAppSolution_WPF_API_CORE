<Window x:Class="QuizApp.WPF.Views.Admin.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="QuizApp - Admin Dashboard" 
        Height="700" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowState="Normal"
        ResizeMode="CanResize"
        Background="#1a1a1a"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Modern Background -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0d1b2a" Offset="0"/>
                    <GradientStop Color="#1b263b" Offset="0.5"/>
                    <GradientStop Color="#415a77" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main Layout -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#2d2d2d" 
                    CornerRadius="10" 
                    Padding="20" 
                    Margin="0,0,0,20"
                    BorderBrush="#404040"
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="🎯 Admin Dashboard" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <TextBlock Text="Welcome back, Administrator!" 
                                   FontSize="14" 
                                   Foreground="#a0a0a0" 
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="👤" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock x:Name="UsernameText" 
                                   FontSize="14" 
                                   Foreground="White" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Feature Cards -->
            <ItemsControl Grid.Row="1" Margin="0,0,0,20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="2" Rows="2" Margin="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.Resources>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="#2d2d2d"/>
                        <Setter Property="CornerRadius" Value="12"/>
                        <Setter Property="BorderBrush" Value="#404040"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="Margin" Value="15"/>
                        <Setter Property="Cursor" Value="Hand"/>
                    </Style>
                </ItemsControl.Resources>

                <!-- Manage Categories Card -->
                <Border>
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Border.Effect>
                    <Button Background="Transparent" BorderThickness="0" Padding="25" Click="ManageCategories_Click">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📚" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Manage Categories" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Create, edit and organize quiz categories" 
                                       FontSize="12" 
                                       Foreground="#a0a0a0" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Manage Questions Card -->
                <Border>
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Border.Effect>
                    <Button Background="Transparent" BorderThickness="0" Padding="25" Click="ManageQuestions_Click">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="❓" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Manage Questions" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Add, modify and review quiz questions" 
                                       FontSize="12" 
                                       Foreground="#a0a0a0" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- Manage Quizzes Card -->
                <Border>
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Border.Effect>
                    <Button Background="Transparent" BorderThickness="0" Padding="25" Click="ManageQuizzes_Click">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="📝" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="Manage Quizzes" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Build and organize complete quiz sets" 
                                       FontSize="12" 
                                       Foreground="#a0a0a0" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

                <!-- User Management Card -->
                <Border>
                    <Border.Effect>
                        <DropShadowEffect Color="#000" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Border.Effect>
                    <Button Background="Transparent" BorderThickness="0" Padding="25" Click="ManageUsers_Click">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="👥" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="User Management" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Manage user accounts and permissions" 
                                       FontSize="12" 
                                       Foreground="#a0a0a0" 
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>
            </ItemsControl>

            <!-- Footer -->
            <Border Grid.Row="2" 
                    Background="#2d2d2d" 
                    CornerRadius="8" 
                    Padding="15"
                    BorderBrush="#404040"
                    BorderThickness="1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="📊 View Analytics" 
                            Background="Transparent" 
                            Foreground="#4a86e8" 
                            BorderThickness="0"
                            FontSize="12"
                            Cursor="Hand"
                            Click="ViewAnalytics_Click"/>
                    <Rectangle Width="1" Height="20" Fill="#404040" Margin="20,0"/>
                    <Button Content="⚙️ Settings" 
                            Background="Transparent" 
                            Foreground="#4a86e8" 
                            BorderThickness="0"
                            FontSize="12"
                            Cursor="Hand"
                            Click="Settings_Click"/>
                    <Rectangle Width="1" Height="20" Fill="#404040" Margin="20,0"/>
                    <Button Content="🚪 Logout" 
                            Background="Transparent" 
                            Foreground="#e74c3c" 
                            BorderThickness="0"
                            FontSize="12"
                            Cursor="Hand"
                            Click="Logout_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>