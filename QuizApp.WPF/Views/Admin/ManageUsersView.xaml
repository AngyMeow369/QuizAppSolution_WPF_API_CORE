<UserControl x:Class="QuizApp.WPF.Views.Admin.ManageUsersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Users List -->
        <GroupBox Header="Users" Grid.Row="0" Grid.Column="0" Margin="10">
            <ListBox ItemsSource="{Binding Users}"
                     SelectedItem="{Binding SelectedUser}"
                     DisplayMemberPath="Username"
                     Height="400"/>
        </GroupBox>

        <!-- Assigned Quizzes for Selected User -->
        <GroupBox Header="Assigned Quizzes" Grid.Row="0" Grid.Column="1" Margin="10">
            <ListBox ItemsSource="{Binding SelectedUser.AssignedQuizzes}"
                     DisplayMemberPath="Title"
                     Height="400"/>
        </GroupBox>
    </Grid>
</UserControl>
