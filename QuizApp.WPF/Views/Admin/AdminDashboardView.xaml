<UserControl x:Class="QuizApp.WPF.Views.Admin.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0F172A"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Colors -->
        <Color x:Key="DarkBackground">#0F172A</Color>
        <Color x:Key="CardBackground">#1E293B</Color>
        <Color x:Key="BorderColor">#334155</Color>
        <Color x:Key="TextPrimary">#F1F5F9</Color>
        <Color x:Key="TextSecondary">#94A3B8</Color>
        <Color x:Key="IndigoPrimary">#6366F1</Color>
        <Color x:Key="EmeraldPrimary">#10B981</Color>
        <Color x:Key="AmberPrimary">#F59E0B</Color>
        <Color x:Key="RosePrimary">#F43F5E</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

        <!-- Effects -->
        <DropShadowEffect x:Key="CardShadow" Color="#000000" ShadowDepth="0" Opacity="0.3" BlurRadius="15"/>
        <DropShadowEffect x:Key="HoverShadow" Color="#000000" ShadowDepth="0" Opacity="0.5" BlurRadius="20"/>

        <!-- Dashboard Card Style -->
        <Style x:Key="DashboardCard" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12"
                                Effect="{StaticResource CardShadow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon Container -->
                                <Border Grid.Column="0" 
                                        Width="48" 
                                        Height="48" 
                                        Background="{TemplateBinding Tag}" 
                                        CornerRadius="10"
                                        Margin="0,0,15,0">
                                    <TextBlock Text="{TemplateBinding Tag}" 
                                               FontSize="20" 
                                               VerticalAlignment="Center" 
                                               HorizontalAlignment="Center"
                                               Foreground="White"/>
                                </Border>

                                <!-- Content -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Path=(Button.Tag).(Grid.Tag), RelativeSource={RelativeSource TemplatedParent}}" 
                                               FontSize="13" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{TemplateBinding Content}" 
                                               FontSize="28" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Effect" Value="{StaticResource HoverShadow}"/>
                                <Setter TargetName="CardBorder" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="CardBorder" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- List Item Style -->
        <Style x:Key="ListItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Loading Overlay -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                Background="#1E293B" 
                Opacity="0.95"
                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🔄 Loading dashboard data..." 
                          Foreground="{StaticResource TextPrimaryBrush}" 
                          FontSize="16"
                          FontWeight="SemiBold"/>
                <ProgressBar Width="200" Height="4" Margin="0,10,0,0" IsIndeterminate="True"/>
            </StackPanel>
        </Border>

        <!-- Stats Cards -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,30">
            <!-- Users Card -->
            <Button Style="{StaticResource DashboardCard}" 
                    Tag="👥"
                    Content="{Binding Users.Count}"
                    Command="{Binding DataContext.NavigateToUsersCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#4F46E5" Offset="0.0"/>
                        <GradientStop Color="#6366F1" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Quizzes Card -->
            <Button Style="{StaticResource DashboardCard}" 
                    Tag="📝"
                    Content="{Binding Quizzes.Count}"
                    Command="{Binding DataContext.NavigateToManageQuizzesCommand, RelativeSource={RelativeSource AncestorType=Window}}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#10B981" Offset="0.0"/>
                        <GradientStop Color="#34D399" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Categories Card -->
            <Button Style="{StaticResource DashboardCard}" 
                    Tag="📂"
                    Content="{Binding Categories.Count}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#F59E0B" Offset="0.0"/>
                        <GradientStop Color="#FBBF24" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Questions Card -->
            <Button Style="{StaticResource DashboardCard}" 
                    Tag="❓"
                    Content="{Binding Questions.Count}">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#EF4444" Offset="0.0"/>
                        <GradientStop Color="#F87171" Offset="1.0"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Recent Quizzes -->
            <Border Grid.Column="0" 
                    Background="{StaticResource CardBackgroundBrush}" 
                    Padding="20" 
                    CornerRadius="12"
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <!-- Header -->
                    <Border Margin="0,0,0,15" Background="Transparent">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Rectangle Width="4" Height="20" Fill="#10B981" RadiusX="2" RadiusY="2" Margin="0,0,12,0"/>
                            <TextBlock Text="Recent Quizzes" 
                                       FontWeight="SemiBold" 
                                       FontSize="16" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Quizzes List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <ItemsControl ItemsSource="{Binding Quizzes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ListItemStyle}">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                            <TextBlock Text="{Binding StartTime, StringFormat='Starts: {0:dd MMM yyyy HH:mm}'}"
                                                       Foreground="{StaticResource TextSecondaryBrush}" 
                                                       FontSize="12"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <!-- Recent Users -->
            <Border Grid.Column="2" 
                    Background="{StaticResource CardBackgroundBrush}" 
                    Padding="20" 
                    CornerRadius="12"
                    BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1"
                    Effect="{StaticResource CardShadow}">
                <StackPanel>
                    <!-- Header -->
                    <Border Margin="0,0,0,15" Background="Transparent">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Rectangle Width="4" Height="20" Fill="#6366F1" RadiusX="2" RadiusY="2" Margin="0,0,12,0"/>
                            <TextBlock Text="Recent Users" 
                                       FontWeight="SemiBold" 
                                       FontSize="16" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Border>

                    <!-- Users List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <ItemsControl ItemsSource="{Binding Users}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ListItemStyle}">
                                        <DockPanel LastChildFill="True">
                                            <TextBlock Text="{Binding Username}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource TextPrimaryBrush}" 
                                                       DockPanel.Dock="Left"/>
                                            <Border Background="#334155" 
                                                    CornerRadius="4" 
                                                    Padding="4,2" 
                                                    DockPanel.Dock="Right">
                                                <TextBlock Text="{Binding Role}" 
                                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                                           FontSize="10"
                                                           FontWeight="SemiBold"/>
                                            </Border>
                                        </DockPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>