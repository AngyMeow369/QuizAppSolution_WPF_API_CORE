<UserControl x:Class="QuizApp.WPF.Views.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Border Background="#FAFAFA" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="User Management"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="#2E2E2E"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"/>

                <!-- Rounded button with Border -->
                <Border CornerRadius="4"
                        Background="#0078D7"
                        DockPanel.Dock="Right"
                        Margin="10,0,0,0">
                    <Button Content="↻ Refresh"
                            Command="{Binding LoadUsersCommand}"
                            Padding="12,5"
                            Background="Transparent"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"/>
                </Border>
            </DockPanel>

            <!-- DataGrid Container -->
            <Border Grid.Row="1"
                    Background="White"
                    CornerRadius="6"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    Padding="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                </Border.Effect>

                <DataGrid ItemsSource="{Binding Users}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          SelectionMode="Single"
                          AlternatingRowBackground="#F7F9FB"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          RowHeaderWidth="0">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Background" Value="#F1F3F6"/>
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="Padding" Value="6,4"/>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="2*"/>
                        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="Auto"/>
                        <DataGridTextColumn Header="Assigned Quizzes" Binding="{Binding AssignedQuizCount}" Width="Auto"/>
                        <DataGridTextColumn Header="Attempted Quizzes" Binding="{Binding AttemptedQuizCount}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Status/Error -->
            <TextBlock Grid.Row="2"
                       Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       FontSize="13"
                       FontStyle="Italic"
                       Margin="4,10,0,0"
                       TextWrapping="Wrap"/>
        </Grid>
    </Border>
</UserControl>
