<Window x:Class="QuizApp.WPF.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizApp.WPF"
        xmlns:vm="clr-namespace:QuizApp.WPF.ViewModels.Admin"
        xmlns:views="clr-namespace:QuizApp.WPF.Views.Admin"
        mc:Ignorable="d"
        Title="QuizApp - Admin Dashboard"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">

    <Window.Icon>
        <DrawingImage>
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <!-- Red circle background -->
                    <GeometryDrawing Brush="Black">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="16,16" RadiusX="20" RadiusY="20"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <!-- White star -->
                    <GeometryDrawing Brush="white"
             Geometry="M 16,4 L 20,12 L 28,12 L 22,18 L 24,26 L 16,22 L 8,26 L 10,18 L 4,12 L 12,12 Z"/>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Icon>

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="15,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8F5E8"/>
                    <Setter Property="Foreground" Value="#2C3E50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataTemplates for main content -->
        <DataTemplate DataType="{x:Type vm:AdminDashboardViewModel}">
            <views:AdminDashboardView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ManageUsersViewModel}">
            <views:ManageUsersView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ManageQuizzesViewModel}">
            <views:ManageQuizzesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:QuizDetailsViewModel}">
            <views:QuizDetailsView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:AssignQuizzesViewModel}">
            <views:AssignQuizzesView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2C3E50" CornerRadius="0,0,0,12" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#1A2530" Padding="20">
                    <StackPanel>
                        <TextBlock Text="🛠️ QuizApp"
                                   Foreground="White"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                        <TextBlock Text="Admin Dashboard"
                                   Foreground="#BDC3C7"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation -->
                <StackPanel Grid.Row="1" Margin="15,30,15,0">
                    <Button Content="🏠 Dashboard"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToDashboardCommand}"/>
                    <Button Content="🧑‍💼 Manage Users"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToUsersCommand}"
                            Margin="0,10,0,0"/>
                    <Button Content="🧩 Manage Quizzes"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToManageQuizzesCommand}"
                            Margin="0,10,0,0"/>
                    <Button Content="📝 View Quiz Questions"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToQuizDetailsCommand}"
                            Margin="0,10,0,0"/>
                    <Button Content="🖋️ Assign Quizzes"
                            Style="{StaticResource NavButton}"
                            Command="{Binding NavigateToAssignQuizzesCommand}"
                            Margin="0,10,0,0"/> 
                </StackPanel>

                <!-- Footer -->
                <Border Grid.Row="2" Background="#1A2530" Padding="15">
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentUsername}"
                                   Foreground="White"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"/>
                        <TextBlock Text="{Binding UserRole}"
                                   Foreground="#BDC3C7"
                                   FontSize="11"
                                   Margin="0,2,0,10"/>
                        <Button Content="🚪 Logout"
                                Command="{Binding LogoutCommand}"
                                Style="{StaticResource NavButton}"
                                Background="#E74C3C"
                                Foreground="White"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Top Nav Bar -->
                <RowDefinition Height="*"/>
                <!-- Content Area -->
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border Grid.Row="0" 
            Background="White" 
            CornerRadius="12,12,0,0" 
            Margin="10,10,10,0"
            BorderThickness="0"
            Effect="{DynamicResource DropShadowEffect}">
                <Grid Margin="20,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Page Title/Breadcrumb -->
                    <TextBlock Grid.Column="0"
                       Text="{Binding CurrentPageTitle, FallbackValue='Dashboard'}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#2C3E50"
                       VerticalAlignment="Center"/>

                    <!-- Spacer -->
                    <Border Grid.Column="1" Background="Transparent"/>

                    <!-- Search Icon -->
                    <Button Grid.Column="2"
                    Content="🔍"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Cursor="Hand"
                    Margin="0,0,15,0"
                    ToolTip="Search"
                    Padding="8">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#34495E"/>
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Notifications -->
                    <Button Grid.Column="3"
                    Content="🔔"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    Cursor="Hand"
                    Margin="0,0,15,0"
                    ToolTip="Notifications"
                    Padding="8">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Foreground" Value="#7F8C8D"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="#34495E"/>
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- User Profile -->
                    <Border Grid.Column="4"
                    Background="#F8F9FA"
                    CornerRadius="8"
                    Padding="10,6"
                    Cursor="Hand">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="32" Height="32" 
                             VerticalAlignment="Center"
                             Margin="0,0,8,0">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#3498DB" Offset="0.0"/>
                                        <GradientStop Color="#2980B9" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="4"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding CurrentUsername, FallbackValue='Admin User'}"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   FontSize="12"/>
                                <TextBlock Text="{Binding UserRole, FallbackValue='Administrator'}"
                                   Foreground="#7F8C8D"
                                   FontSize="10"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Border Grid.Row="1" 
            Background="White" 
            CornerRadius="0,0,12,12" 
            Margin="10,0,10,10"
            Effect="{DynamicResource DropShadowEffect}">
                <ContentControl Content="{Binding CurrentView}" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"/>
            </Border>
        </Grid>


    </Grid>
</Window>
