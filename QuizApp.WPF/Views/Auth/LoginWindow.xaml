<Window x:Class="QuizApp.WPF.Views.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:QuizApp.WPF.Views.Auth"
        Title="QuizApp - Login"
        Height="600" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a1a"
        ResizeMode="NoResize">


    <Window.Icon>
        <DrawingImage>
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <!-- Red circle background -->
                    <GeometryDrawing Brush="Black">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="16,16" RadiusX="20" RadiusY="20"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <!-- White star -->
                    <GeometryDrawing Brush="red"
                 Geometry="M 16,4 L 20,12 L 28,12 L 22,18 L 24,26 L 16,22 L 8,26 L 10,18 L 4,12 L 12,12 Z"/>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>
    </Window.Icon>




    <!-- IMPORTANT: Give LoginView a NAME so code-behind can find it -->
    <views:LoginView x:Name="RootLoginView" />

</Window>
