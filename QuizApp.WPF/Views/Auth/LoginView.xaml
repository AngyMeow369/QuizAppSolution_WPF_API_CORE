<UserControl x:Class="QuizApp.WPF.Views.Auth.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:QuizApp.WPF.Converters"
             Background="#1a1a1a">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="#2d2d2d" 
            CornerRadius="15" 
            Margin="20"
            BorderThickness="1"
            BorderBrush="#404040"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            MaxWidth="500">

        <Grid Margin="30" 
              VerticalAlignment="Center"
              MaxWidth="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,30">
                <TextBlock Text="🎯" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="QuizApp" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="Welcome back!" FontSize="14" Foreground="#a0a0a0" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Username -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Username" Foreground="#e0e0e0" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="40" 
                         Background="#3d3d3d" 
                         Foreground="White" 
                         BorderBrush="#555555"
                         BorderThickness="1"
                         CaretBrush="White"
                         Padding="10"
                         FontSize="14"
                         KeyDown="UsernameTextBox_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="BorderBrush" Value="#555555"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#4a86e8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </StackPanel>

            <!-- Password -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Password" Foreground="#e0e0e0" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Grid.Column="1" Text="Forgot?" Foreground="#4a86e8" FontSize="11" Cursor="Hand" Margin="0,0,0,5"/>
                </Grid>

                <PasswordBox x:Name="PasswordBox"
                             Height="40" 
                             Background="#3d3d3d" 
                             Foreground="White" 
                             BorderBrush="#555555"
                             BorderThickness="1"
                             Padding="10"
                             FontSize="14"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             KeyDown="PasswordBox_KeyDown">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="BorderBrush" Value="#555555"/>
                            <Style.Triggers>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#4a86e8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>
            </StackPanel>

            <CheckBox Grid.Row="4" 
                      Content="Remember me" 
                      Foreground="#a0a0a0" 
                      Margin="0,0,0,20"
                      FontSize="12"/>

            <!-- Login Button -->
            <Button Grid.Row="5" 
                    Content="{Binding LoginButtonText}" 
                    Height="45" 
                    Background="#4a86e8" 
                    Foreground="Black" 
                    BorderThickness="0"
                    FontSize="14" 
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Command="{Binding LoginCommand}">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4a86e8"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3a76d8"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2a66c8"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#666666"/>
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Loading Text -->
            <TextBlock Grid.Row="6" 
                       Text="{Binding LoadingText}" 
                       Foreground="#4a86e8" 
                       FontSize="12" 
                       HorizontalAlignment="Center"
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                       Margin="0,10,0,0"/>

            <!-- Register Link -->
            <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Don't have an account? " Foreground="#a0a0a0" FontSize="12"/>
                <TextBlock Text="Sign up" 
                          Foreground="#4a86e8" 
                          FontSize="12" 
                          FontWeight="SemiBold" 
                          Cursor="Hand"/>
            </StackPanel>

        </Grid>
    </Border>

</UserControl>