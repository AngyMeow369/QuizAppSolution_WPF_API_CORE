<UserControl x:Class="QuizApp.WPF.Views.Auth.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1a1a1a">

    <Border Background="#2d2d2d"
            CornerRadius="15"
            Margin="20"
            BorderThickness="1"
            BorderBrush="#404040"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            MaxWidth="500">

        <Grid Margin="30" MaxWidth="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,25">
                <TextBlock Text="📝" FontSize="40" HorizontalAlignment="Center"/>
                <TextBlock Text="Create an Account" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Username -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <TextBlock Text="Username" Foreground="#e0e0e0" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Username}" 
                         Height="40" 
                         Background="#3d3d3d"
                         Foreground="White" 
                         BorderBrush="#555" 
                         Padding="10"
                         FontSize="14"/>
            </StackPanel>

            <!-- Password -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <TextBlock Text="Password" Foreground="#e0e0e0" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="40"
                             Background="#3d3d3d"
                             Foreground="White"
                             BorderBrush="#555"
                             Padding="10"
                             FontSize="14"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
            </StackPanel>

            <!-- Confirm Password -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Confirm Password" Foreground="#e0e0e0" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Height="40"
                             Background="#3d3d3d"
                             Foreground="White"
                             BorderBrush="#555"
                             Padding="10"
                             FontSize="14"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
            </StackPanel>

            <!-- Register Button -->
            <Button Grid.Row="4"
                    Content="{Binding RegisterButtonText}"
                    Height="45"
                    Background="#4a86e8"
                    Foreground="Black"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    FontSize="14"
                    Cursor="Hand"
                    Command="{Binding RegisterCommand}" />

            <!-- Login Link -->
            <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Already have an account? " Foreground="#a0a0a0" FontSize="12"/>
                <TextBlock Text="Login"
                           Foreground="#4a86e8"
                           FontSize="12"
                           Cursor="Hand"
                           MouseLeftButtonUp="LoginLink_Click"/>
            </StackPanel>

        </Grid>
    </Border>

</UserControl>
