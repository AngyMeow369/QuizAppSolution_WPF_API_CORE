<UserControl x:Class="QuizApp.WPF.Views.User.UserDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="600" Width="800">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="📊 Your Quiz Dashboard" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Stats Cards -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="#4CAF50" Padding="20" Margin="0,0,15,0" Width="200">
                    <StackPanel>
                        <TextBlock Text="5" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Assigned Quizzes" FontSize="14" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="#2196F3" Padding="20" Margin="0,0,15,0" Width="200">
                    <StackPanel>
                        <TextBlock Text="3" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Completed" FontSize="14" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border Background="#FF9800" Padding="20" Width="200">
                    <StackPanel>
                        <TextBlock Text="85%" FontSize="32" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Average Score" FontSize="14" Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Recent Quizzes -->
            <Border Background="White" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📝 Recent Quizzes" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                    <StackPanel>
                        <Border BorderBrush="#ECF0F1" BorderThickness="0,0,0,1" Padding="0,10">
                            <TextBlock Text="Math Basics Quiz - Score: 9/10" FontWeight="SemiBold"/>
                        </Border>
                        <Border BorderBrush="#ECF0F1" BorderThickness="0,0,0,1" Padding="0,10">
                            <TextBlock Text="Science Fundamentals - Score: 8/10" FontWeight="SemiBold"/>
                        </Border>
                        <Border Padding="0,10">
                            <TextBlock Text="History Challenge - Score: 7/10" FontWeight="SemiBold"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Available Quizzes -->
            <Border Background="White" Padding="20">
                <StackPanel>
                    <TextBlock Text="🆕 Available Quizzes" FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

                    <StackPanel>
                        <Border BorderBrush="#ECF0F1" BorderThickness="0,0,0,1" Padding="0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Advanced Mathematics" FontWeight="SemiBold" Width="200"/>
                                <Button Content="Take Quiz" Background="#4CAF50" Foreground="White" Padding="10,5"/>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="#ECF0F1" BorderThickness="0,0,0,1" Padding="0,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Computer Science" FontWeight="SemiBold" Width="200"/>
                                <Button Content="Take Quiz" Background="#4CAF50" Foreground="White" Padding="10,5"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>