<UserControl x:Class="QuizApp.WPF.Views.User.QuizAttemptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:QuizApp.WPF.ViewModels.User"
             mc:Ignorable="d"
             Height="600" Width="800">

    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="{Binding Quiz.Title}" FontSize="28" FontWeight="Bold"/>
                <TextBlock Text="{Binding TimeRemaining, StringFormat=' - {0:mm\\:ss} remaining'}"
                           FontSize="20" FontWeight="SemiBold" Foreground="Red" Margin="15,0,0,0"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <TextBlock Text="Loading quiz..." 
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                       HorizontalAlignment="Center" FontSize="16" Foreground="#7F8C8D" Margin="0,20"/>

            <!-- Questions List -->
            <ItemsControl ItemsSource="{Binding Quiz.Questions}" 
                         Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" Padding="15" Margin="0,0,0,15" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding Text}" FontSize="16" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                <ItemsControl ItemsSource="{Binding Options}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton GroupName="{Binding DataContext.Id, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                         Content="{Binding Text}"
                                                         IsChecked="{Binding DataContext.SelectedAnswers[Id], RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay,
                                                         Converter={StaticResource OptionIdToBoolConverter}, ConverterParameter={Binding Id}}"
                                                         Command="{Binding DataContext.SelectOptionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                         CommandParameter="{Binding Id}"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Submit Button -->
            <Button Content="Submit Quiz"
                    Command="{Binding SubmitCommand}"
                    IsEnabled="{Binding IsSubmitting, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                    Background="#4CAF50" Foreground="White" FontWeight="SemiBold" Padding="15,10"
                    HorizontalAlignment="Center" Width="150"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
