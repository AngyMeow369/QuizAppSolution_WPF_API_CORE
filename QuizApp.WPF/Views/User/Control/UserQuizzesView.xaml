<UserControl x:Class="QuizApp.WPF.Views.User.UserQuizzesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="20"
                          ShadowDepth="0"
                          Color="#1F2937"
                          Opacity="0.1"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="📝 My Assigned Quizzes"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <TextBlock Text="Loading quizzes..."
                       Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Foreground="#7F8C8D"
                       Margin="0,20"/>

            <ItemsControl ItemsSource="{Binding AssignedQuizzes}"
                          Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                                Padding="20"
                                Margin="0,0,0,15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Title}"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"/>
                                    <TextBlock Text="{Binding CategoryName, StringFormat='Category: {0}'}"
                                               FontSize="12"
                                               Foreground="#7F8C8D"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding EndTime, StringFormat='Due: {0:MMM dd, yyyy - h:mm tt}'}"
                                               FontSize="11"
                                               Foreground="#E74C3C"
                                               Margin="0,5,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="Start Quiz"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        Padding="20,10"
                                        FontWeight="SemiBold"
                                        Command="{Binding DataContext.StartQuizCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- EMPTY STATE -->
            <Border Visibility="{Binding AssignedQuizzes, Converter={StaticResource CountToInverseVisibilityConverter}}"
                    Background="#F8F9FB"
                    CornerRadius="12"
                    Padding="30"
                    Margin="0,40"
                    HorizontalAlignment="Center"
                    Effect="{StaticResource CardShadow}">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <TextBlock Text="📭"
                               FontSize="40"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="No Quizzes Assigned Yet"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#374151"
                               Margin="0,10,0,5"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Looks like your instructor hasn’t assigned anything new."
                               FontSize="14"
                               Foreground="#6B7280"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>

                    <TextBlock Text="Check back later — something exciting might arrive soon! 🚀"
                               FontSize="12"
                               Foreground="#9CA3AF"
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"/>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
