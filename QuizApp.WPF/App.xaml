<Application x:Class="QuizApp.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:QuizApp.WPF.Converters"
             StartupUri="Views/Auth/LoginWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
            <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <converters:CountToInverseVisibilityConverter x:Key="CountToInverseVisibilityConverter"/>
            <converters:ScoreToPercentageConverter x:Key="ScoreToPercentageConverter"/>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
